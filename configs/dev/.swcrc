{
  "jsc": {
    "parser": {
      "syntax": "typescript",
      "decorators": true
    },
    "target": "es2022",
    "transform": {
        "legacyDecorator": true,
        "decoratorMetadata": true
    },
    "preserveAllComments": true
  },
  "module": {
    "type": "nodenext"
  },
  "sourceMaps": true,
  "exclude": ["node_modules", "dist"]
}